<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="position"
            type="java.lang.Integer" />

        <variable
            name="ChatMessageViewModel"
            type="e.rezeda.chat.ChatMessageViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{(v) -> ChatMessageViewModel.onItemClick(position, v)}"
        android:orientation="vertical">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/txtName"

                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginLeft="84dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@{ChatMessageViewModel.getChatMessageAt(position).name}"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Test" />

            <TextView
                android:id="@+id/txtMessage"
                android:layout_width="282dp"
                android:layout_height="21dp"
                android:layout_marginTop="12dp"
                android:text="@{ChatMessageViewModel.getChatMessageAt(position).text}"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/txtName"
                app:layout_constraintTop_toBottomOf="@+id/txtName"
                tools:text="Test" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
</layout>